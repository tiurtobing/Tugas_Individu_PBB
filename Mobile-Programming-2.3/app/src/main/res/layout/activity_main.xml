<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/openUrlButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buka Whatsapp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:onClick="openYoutube" />

    <Button
        android:id="@+id/openGoogleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buka Instagram"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/openUrlButton"
        android:onClick="openGoogle" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/android_logo"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/openGoogleButton"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat Datang di Aplikasi Android"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/openGoogleButton"
        android:layout_marginTop="16dp" />

</RelativeLayout>
